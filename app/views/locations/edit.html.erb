<section class="max-w-4xl mx-auto pb-14">
  <h1 class="text-neutral-500 text-4xl leading-tight mb-8">
    Editing Location
  </h1>

  <%= render 'form', location: @location %>

  <hr class="my-8">

  <div>
    <% if @location.latitude.present? %>
      Coordinates:
      <%= @location.latitude %>/<%= @location.longitude %>
    <% end %>
  </div>

  <div>
    <% if @location.timezone.present? %>
      Timezone:
      <%= @location.timezone %>
    <% end %>
  </div>
</section>
