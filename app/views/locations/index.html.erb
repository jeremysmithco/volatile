<section class="max-w-4xl mx-auto pb-14">
  <h1 class="text-neutral-500 text-4xl leading-tight mb-8">
    Locations
  </h1>

  <% @locations.each do |location| %>
    <div class="flex gap-2 items-center">
      <div><%= location.id %></div>
      <div><%= link_to location.street, [:edit, location] %></div>
      <div class="text-sm"><%= l location.created_at, format: :short %></div>
    </div>
  <% end %>

  <div>
    <%= link_to 'New Location', [:new, :location] %>
  </div>
</section>
